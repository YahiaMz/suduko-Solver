            android:layout_height="wrap_content"
            android:layout_weight="0.1"></Space>

        <Button
            android:id="@+id/NUMBER9"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
